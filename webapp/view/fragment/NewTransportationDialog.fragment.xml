<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:pm="com.pepsico.core.sap.m">
	<Dialog title="New Transportation">
		<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="Address">
			<f:content>
				<Label text="Region {transportation>/NewTransportationDetails/Region}"/>
				<pm:InputWithSearchHelp selectedKey="{transportation>/NewTransportationDetails/Region}"
					value="{transportation>/NewTransportationDetails/RegionDescription}" required="true" maxSuggestionWidth="auto" placeholder="Enter Region"
					showSuggestion="true" showValueHelp="true" suggestionItems="{transportation>/NewTransportationDetails/RegionList}" type="Text">
					<pm:suggestionItems>
						<core:ListItem key="{Region}" text="{RegionDescription}" additionalText="{Region}"/>
					</pm:suggestionItems>
				</pm:InputWithSearchHelp>
				<Label text="Ship From Location"/>
				<Input value="{transportation>/NewTransportationDetails/ShipFrom}"></Input>
				<pm:InputWithSearchHelp selectedKey="{transportation>/NewTransportationDetails/ShippingLocationKey}"
					value="{transportation>/NewTransportationDetails/Description}" required="true" maxSuggestionWidth="auto" placeholder="Enter Region"
					showSuggestion="true" showValueHelp="true" suggestionItems="{transportation>/NewTransportationDetails/ShipFromList}" type="Text">
					<pm:suggestionItems>
						<core:ListItem key="{transportation>/Region}" text="{transportation>/RegionDescription}" additionalText="{transportation>/Region}"/>
					</pm:suggestionItems>
				</pm:InputWithSearchHelp>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="Submit" press="onNewTransportationSubmit"/>
			<Button text="Cancel" press="onNewTransportationCancel"/>
			<Button text="Messages" press="onNewTransportationMessagePopover"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>